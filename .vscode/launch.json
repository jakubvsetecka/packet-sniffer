{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL: Debug with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ipk-sniffer",
            "args": ["${input:debugArgs}"], // This uses the debug arguments input directly
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/sudo-gdb.sh", // Use the custom sudo gdb script
            "preLaunchTask": "make build", // Ensure your build task is correct
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "inputs": [
        {
            "id": "debugArgs",
            "type": "promptString",
            "description": "Enter debug arguments:",
            "default": "--interface eth0"
        }
    ]
}
