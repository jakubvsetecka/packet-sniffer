{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Nix Environment",
            "type": "shell",
            "command": "nix develop ./dev-envs/ipk#c",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "make build",
            "type": "shell",
            "command": "make",
            "args": [
                // Add any make arguments here
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}" // Ensures 'make' runs in the right directory
            }
        },
        {
            "label": "askForArguments",
            "type": "shell",
            "command": "echo",
            "args": [
                "${input:debugArgs}"
            ],
            "problemMatcher": []
        },
        {
            "label": "preLaunch",
            "dependsOn": ["make build", "askForArguments"],
            "dependsOrder": "sequence"
        }
    ],
    "inputs": [
        {
            "id": "debugArgs",
            "type": "promptString",
            "description": "Enter debug arguments:",
            "default": "--interface eth0" // provide a default or example structure
        }
    ]
}
